# SysDroid Web Application Configuration
# Copy this file to .env and adjust the values as needed

# Flask Environment (development, production)
FLASK_ENV=development

# Application Settings
SYSDROID_DEBUG=True
SYSDROID_HOST=0.0.0.0
SYSDROID_PORT=5000

# Data Paths
# Base directory for all data (defaults to ../data relative to webapp)
SYSDROID_DATA_DIR=/home/foiv/SYSDROID_APP/data

# Directory containing exported/processed data (defaults to ../Exports)
SYSDROID_EXPORTS_DIR=/home/foiv/SYSDROID_APP/Exports

# Directory containing device mappings (defaults to data/mappings)
SYSDROID_MAPPINGS_DIR=/home/foiv/SYSDROID_APP/data/mappings

# Directory containing trace files (defaults to data/traces)
SYSDROID_TRACES_DIR=/home/foiv/SYSDROID_APP/data/traces

# Main events file (defaults to Exports/processed_events.json)
SYSDROID_EVENTS_FILE=/home/foiv/SYSDROID_APP/Exports/processed_events.json

# Chart Configuration
# Number of top devices to show in charts and statistics
SYSDROID_TOP_DEVICES=10

# Number of top events to show in charts and statistics
SYSDROID_TOP_EVENTS=10

# Timeline Configuration
# Maximum number of events to display in timeline (for performance)
SYSDROID_MAX_TIMELINE_EVENTS=1000

# Default zoom level for timeline
SYSDROID_DEFAULT_ZOOM=1.0